---
import Features from "@components/Features.astro"
import Hero from "@components/Hero.astro"
import Layout from "@layouts/Layout.astro"
import me from "assets/me.jpg"
import { t, astroI18n } from "astro-i18n"

astroI18n.init(Astro)

const features = [
  {
    title: t("index.features.tools.title"),
    description: t("index.features.tools.description"),
    icon: "fa-solid:tools",
  },
  {
    title: t("index.features.exp.title"),
    description: t("index.features.exp.description"),
    icon: "fa-solid:briefcase",
  },
  {
    title: t("index.features.os.title"),
    description: t("index.features.os.description"),
    items: ["Starlette", "BlackSheep", "Bandit", "django-recurrence", "yamlfix", "isort"],
    icon: "fa-solid:heart",
  },
  {
    title: t("index.features.books.title"),
    description: t("index.features.books.description"),
    items: [
      "Fluent Python",
      "Architectural Patterns with Python",
      "RESTful Web Services",
      "Web Scalability for Startup Engineers",
    ],
    icon: "fa-solid:book-reader",
  },
]

const actions = [
  {
    text: t("index.actions.telegram"),
    link: "https://t.me/jediroman",
    icon: "fa:paper-plane",
    classes: "bg-sky-600 hover:bg-sky-700",
  },
  {
    text: t("index.actions.gh"),
    link: "https://github.com/Klavionik",
    icon: "fa:github",
  },
]
---

<Layout title={t("pageTitle.index")}>
  <Hero
    title={t("index.hero.title")}
    subtitle={t("index.hero.subtitle")}
    image={me}
    imageAlt="Roman Vlasenko"
    actions={actions}
  />
  <Features features={features} />
</Layout>
