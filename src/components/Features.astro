---
import Feature from "./Feature.astro"

interface FeatureI {
  title: string
  description: string
  icon: string
  items?: Array<string>
}

interface Props {
  features: Array<FeatureI>
}

const { features } = Astro.props
---

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-4 gap-12">
  {
    features.map((feature) => (
      <Feature title={feature.title} icon={feature.icon}>
        <p>{feature.description}</p>
        {feature.items && (
          <ul class="list-disc pl-4 mt-2 mb-2">
            {feature.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        )}
      </Feature>
    ))
  }
</div>
