---
import { ImageMetadata } from "astro"
import CategoryBadge from "@components/CategoryBadge.astro"
import LinkButton from "./LinkButton.astro"
export interface Props {
  category: string
  image: ImageMetadata
  imageAlt: string
  title: string
  description: string
  tags: string[]
  added: Date
}

const { category, image, imageAlt, title, description, tags, added } = Astro.props
---

<div
  class="grid md:grid-cols-2 gap-5 md:gap-10 items-center p-6 rounded-md border transition-transform hover:scale-105"
>
  <img src={image.src} alt={imageAlt} class="w-full rounded-md shadow-md" />
  <div class="flex flex-col">
    <CategoryBadge text={category} />
    <h2 class="text-3xl font-semibold leading-snug tracking-tight mt-1">
      {title}
    </h2>

    <p class="text-slate-500 mt-1">{description}</p>

    <div class="flex gap-2 mt-3 text-gray-400 text-sm">
      {tags.map((tag) => <span>#{tag}</span>)}
    </div>

    <div class="text-gray-400 mt-2 text-sm">
      Добавлен {added.toLocaleDateString()}
    </div>
  </div>
</div>
