---
import { Icon } from "astro-icon"

interface Props {
  title: string
  icon: string
}

const { title, icon } = Astro.props
---

<div class="flex gap-4 items-start bg-slate-50 rounded-lg p-5">
  <div class="mt-1 bg-sky-600 rounded-full p-2.5 w-10 h-10 shrink-0">
    <Icon class="text-white" name={icon} />
  </div>
  <div>
    <h3 class="font-semibold text-lg">{title}</h3>
    <div class="text-slate-600 mt-2 leading-relaxed">
      <slot />
    </div>
  </div>
</div>
